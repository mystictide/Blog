@model Blog.Entity.Blog.Categories

@{
    ViewBag.Title = "Process Question";
}

<section id="main-content" class="column column-offset-15">
    <div class="row grid-responsive">
        <div class="column ">
            <div class="card">
                <div class="card-title">
                    @if (Model.ID == 0)
                    {
                        <h3>Yeni Kategori</h3>
                    }
                    else
                    {
                        <h3>@Model.Name</h3>
                    }
                </div>
                <div class="card-block">
                    <form action="/category" method="post">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ID)
                        <fieldset>
                            <label for="Name">Kategori adı</label>
                            @Html.TextBoxFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name, "Bu alan gerekli", new { @class = "alert background-warning" })
                        </fieldset>
                         <input class="button-primary" type="submit" value="Kaydet"">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section customScripts{
    <script src="~/Content/plugins/validate/js/jquery.validate.min.js"></script>
    <script src="~/Content/plugins/validate/js/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/plugins/validate/js/jquery.validate.overrides.js"></script>
}